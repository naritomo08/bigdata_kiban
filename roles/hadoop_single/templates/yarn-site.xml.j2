<configuration>
  <property>
    <name>yarn.resourcemanager.hostname</name>
    <value>{{ rm_hostname }}</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>

  <property>
    <name>yarn.nodemanager.local-dirs</name>
    <value>{{ yarn_local_dir }}</value>
  </property>

  <property>
    <name>yarn.nodemanager.log-dirs</name>
    <value>{{ yarn_log_dir }}</value>
  </property>

  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value>{{ yarn_nm_memory_mb }}</value>
  </property>
  <property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>{{ yarn_sched_max_mb }}</value>
  </property>

  <property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>{{ yarn_sched_min_mb }}</value>
  </property>

  <property>
    <name>yarn.nodemanager.vmem-check-enabled</name>
    <value>false</value>
  </property>

  <property>
    <name>yarn.application.classpath</name>
    <value>
/etc/hadoop/conf,
/etc/hadoop/conf/*,
/usr/lib/hadoop/*,
/usr/lib/hadoop/lib/*,
/usr/lib/hadoop-hdfs/*,
/usr/lib/hadoop-hdfs/lib/*,
/usr/lib/hadoop-mapreduce/*,
/usr/lib/hadoop-mapreduce/lib/*,
/usr/lib/hadoop-yarn/*,
/usr/lib/hadoop-yarn/lib/*
    </value>
  </property>

  <property>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>{{ yarn_rm_webapp }}</value>
  </property>

  <property>
    <name>yarn.timeline-service.enabled</name>
    <value>{{ 'true' if ats_enabled else 'false' }}</value>
  </property>
  <property>
    <name>yarn.timeline-service.version</name>
    <value>{{ ats_version }}</value>
  </property>

  <property>
    <name>yarn.timeline-service.hostname</name>
    <value>{{ ats_hostname }}</value>
  </property>

  <property>
    <name>yarn.timeline-service.address</name>
    <value>{{ ats_address }}</value>
  </property>
  <property>
    <name>yarn.timeline-service.webapp.address</name>
    <value>{{ ats_webapp }}</value>
  </property>

  <property>
    <name>yarn.timeline-service.store-class</name>
    <value>org.apache.hadoop.yarn.server.timeline.LeveldbTimelineStore</value>
  </property>
  <property>
    <name>yarn.timeline-service.leveldb-timeline-store.path</name>
    <value>{{ ats_leveldb_path }}</value>
  </property>

  <property>
    <name>yarn.log-aggregation-enable</name>
    <value>{{ 'true' if yarn_log_aggregation else 'false' }}</value>
  </property>
  <property>
    <name>yarn.nodemanager.remote-app-log-dir</name>
    <value>{{ yarn_remote_app_log_dir }}</value>
  </property>

  <property>
    <name>yarn.log.server.url</name>
    <value>{{ yarn_log_server_url }}</value>
  </property>
</configuration>
