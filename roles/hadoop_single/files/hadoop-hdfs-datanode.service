[Unit]
Description=Hadoop HDFS DataNode
After=network.target hadoop-hdfs-namenode.service
Wants=network.target hadoop-hdfs-namenode.service

[Service]
Type=simple
User=hadoop
Group=hadoop
EnvironmentFile=-/etc/default/hadoop
WorkingDirectory=/var/lib/hadoop-hdfs
ExecStart=/usr/bin/hdfs --config ${HADOOP_CONF_DIR} datanode
Restart=on-failure
RestartSec=5
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
